@page
@model _2048WebApp.Pages._2048Model
@using _2048WebApp
@using _2048WebApp.Models
@using _2048WebApp.Components
@{
    ViewData["Title"] = "2048";
}
<script>
    document.addEventListener("keydown", function (event) {
        switch (event.key) {
            case 'ArrowLeft':
                document.getElementById("LeftMoveButton").click();
                break;
            case 'ArrowUp':
                document.getElementById("UpMoveButton").click();
                break;
            case 'ArrowRight':
                document.getElementById("RightMoveButton").click();
                break;
            case 'ArrowDown':
                document.getElementById("DownMoveButton").click();
                break;
        }
    });
</script>
<component type="typeof(Components.Component2048)" render-mode="Server" />
<script src="_framework/blazor.server.js"></script>